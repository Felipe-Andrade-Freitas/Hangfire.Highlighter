<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hangfire Highlighter</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-45386460-1', 'demo.hangfire.io');
  ga('send', 'pageview');
    </script>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Highlighter on .NET 4.5", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <div class="pull-right hidden-xs">
                    <a href="@Url.Action("Create", "Home")" class="btn btn-primary navbar-btn">Create Snippet</a>
                    <a href="@Url.Content("~/hangfire")" class="btn btn-default navbar-btn"><i style="top: 3px; width: 14px;" class="glyphicon glyphicon-tasks"></i> Hangfire Dashboard</a>
                </div>
                <ul class="nav navbar-nav visible-xs">
                    <li>
                        <a href="@Url.Action("Create", "Home")">Create Snippet</a>
                    </li>
                    <li>
                        <a href="@Url.Content("~/hangfire")">Hangfire Dashboard</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>

<script src="~/Scripts/jquery-3.1.0.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
<script src="~/signalr/hubs"></script>
@RenderSection("scripts", required: false)
</body>
</html>